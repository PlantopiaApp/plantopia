<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button2">

    <ImageView
        android:id="@+id/failDialogImage"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:src="@drawable/plant_sick_image"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/failDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorry!"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:paddingTop="16dp"/>

    <TextView
        android:id="@+id/failDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your plant is in poor condition. It seems you are not taking great care of it."
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <Button
        android:id="@+id/failDialogOKButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>
