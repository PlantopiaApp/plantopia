<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpScreen">

    <!-- Buttons for Signup with Google and Signup with Facebook -->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account,"
        android:textColor="#223D26"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Your account to save data."
        android:textAlignment="textStart"
        android:textColor="#223D26"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/button2"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSignUpFacebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="25dp">

            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:hint="Username"
                android:textSize="16sp"
                android:inputType="text"
                android:padding="15dp"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="22dp"
                android:hint="Email"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextPassword1"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="22dp"
                android:hint="Password"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:padding="15dp"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="40dp"
                android:hint="Confirm Password"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:padding="15dp"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonSignUp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/button1"
                android:text="SIGN UP"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/buttonSignUpGoogle"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/signup_button"
        android:drawableLeft="@drawable/google"
        android:paddingHorizontal="50dp"
        android:text="Sign Up with Google"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#475569"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707" />

    <Button
        android:id="@+id/buttonSignUpFacebook"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/signup_button"
        android:drawableLeft="@drawable/facebooksmall"
        android:paddingHorizontal="50dp"
        android:text=" Sign Up with Facebook"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#475569"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:backgroundTint="#fff"
        android:clickable="true"
        android:text="Already a member? Sign In here"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#223D26"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="277dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="488dp"
        android:fontFamily="sans-serif-medium"
        android:text="By using Plantopia, you agree to our Terms and Privacy Policy"
        android:textAlignment="center"
        android:textColor="#C2C2C2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.925" />


</androidx.constraintlayout.widget.ConstraintLayout>
